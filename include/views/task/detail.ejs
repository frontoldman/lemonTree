<% include ../header %>
<div class="container-fluid dashboard-body">
	<div class="row">
		<% include ../sidebar %>
		<div class="col-md-10">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-md-3"><h3 class="panel-title">任务详情</h3></div>
						<div class="col-md-4 col-md-offset-5 title-ico">
							<a href="#" data-toggle="modal" data-target="#designation"><span
										class="glyphicon glyphicon-hand-right" aria-hidden="true"></span> 指派</a>
							<a href="#"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> 完成</a>
							<a href="/task/"><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span> 取消</a>
							<a href="/task/edit/<%= task._id %>"><span class="glyphicon glyphicon-pencil"
							                                           aria-hidden="true"></span> 编辑</a>
							<a href="#"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> 备注</a>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<table class="table project-detail">
						<tr>
							<th>任务名称:</th>
							<td><%= task.name %></td>
						</tr>
						<tr>
							<th>所属项目:</th>
							<td><%= task.projectName %></td>
						</tr>
						<tr>
							<th>优先级:</th>
							<td><%= task.level %></td>
						</tr>
						<tr>
							<th>开始时间:</th>
							<td><%= task._startTime %></td>
						</tr>
						<tr>
							<th>结束时间:</th>
							<td><%= task._endTime %></td>
						</tr>
						<tr>
							<th>状态:</th>
							<td><%= task.status %></td>
						</tr>
						<tr>
							<th>进度:</th>
							<td><%= task.progress %>%</td>
						</tr>
						<tr>
							<th>指派给:</th>
							<td><%= task.assignerName || '--' %></td>
						</tr>
						<tr>
							<th>创建者:</th>
							<td><%= task.adderName || '--' %></td>
						</tr>
						<tr>
							<th>任务描述:</th>
							<td><%= task.description %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="designation" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
							aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">选择指派人</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal" id="desForm" method="get" action="/">
					<div class="form-group">
						<label for="desPerson" class="col-sm-3 control-label">选择指派人</label>
						<div class="col-sm-9">
							<input type="text" name="username" class="form-control" id="desPerson" placeholder="选择指派人">
							<input type="hidden" name="userId" id="desPersonId">
						</div>
					</div>
					<div class="form-group">
						<label for="Note" class="col-sm-3 control-label">添加备注</label>
						<div class="col-sm-9">
							<textarea id="Note" class="form-control"></textarea>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				<button type="submit" form="desForm" class="btn btn-primary">保存</button>
			</div>
		</div>
		<!-- /.modal-content -->
	</div>
	<!-- /.modal-dialog -->
</div><!-- /.modal -->

<% include ../script %>

