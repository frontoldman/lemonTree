<% include ../header %>
<div class="container-fluid dashboard-body">
	<div class="row">
		<% include ../sidebar %>
		<div class="col-md-10">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">任务列表</h3>
				</div>
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>任务等级</th>
							<th>所属项目</th>
							<th>任务名称</th>
							<th>截至日期</th>
							<th>状态</th>
							<th>指派者</th>
							<th>创建者</th>
							<th>创建时间</th>
							<th>操作</th>
						</tr>
					</thead>
					<tbody>
					<% list.forEach(function(task){ %>
					<tr>
						<td><%= task.level %></td>
						<td><%= task._project.name %></td>
						<td><a href="#"><%= task.name %></a></td>
						<td><%= task._endTime %></td>
						<td><%= task._status %></td>
						<td><%= task._assigner.username %></td>
						<td><%= task._adder.username %></td>
						<td><%= task._addTime %></td>
						<td>
							<a href="/task/edit/<%= task._id %>">编辑</a>
							<a href="#">删除</a>
						</td>
					</tr>
					<% }) %>

					</tbody>
				</table>
			</div>

			<% include ../page %>
		</div>
	</div>
</div>

<% include ../script %>
<% include ../footer %>