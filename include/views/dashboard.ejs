<% include header %>
<div class="container-fluid dashboard-body">
	<div class="row">

		<% include sidebar %>

		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">任务列表</h3>
				</div>
				<table class="table table-bordered table-hover">
					<thead>
					<tr>
						<th>优先级</th>
						<th>任务名称</th>
						<th>结束时间</th>
						<th>进度</th>
					</tr>
					</thead>
					<tbody>
					<% taskList.forEach(function(task){ %>
					<tr>
						<td class="text-center">
							<span class="level-circle level-circle-<%= task.level %>"><%= task.level %></span>
						</td>
						<td><a href="/task/detail/<%= task._id %>"><%= task.name %></a></td>
						<td><%= task._endTime %></td>
						<td width="80">
							<div class="progress-content-min">
								<div style="width: <%= task.progress %>%" class="progress-in"></div>
							</div>
						</td>
					</tr>
					<% }) %>
					</tbody>
				</table>
			</div>
		</div>

		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">bug列表</h3>
				</div>
				<table class="table table-bordered table-hover">
					<thead>
					<tr>
						<th>bug等级</th>
						<th>bug名称</th>
						<th>状态</th>
					</tr>
					</thead>
					<tbody>
					<% bugList.forEach(function(bug){ %>
					<tr>
						<td class="text-center">
							<span class="level-circle level-circle-<%= bug.level %>"><%= bug.level %></span>
						</td>
						<td><a href="/bug/detail/<%= bug._id %>"><%= bug.name %></a></td>
						<td>
							<%= bug._status %>
						</td>
					</tr>
					<% }) %>
					</tbody>
				</table>
			</div>
		</div>

		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">项目列表</h3>
				</div>
				<table class="table table-bordered table-hover">
					<thead>
					<tr>
						<th>项目名称</th>
						<th>结束时间</th>
						<th>进度</th>
					</tr>
					</thead>
					<tbody>
					<% projectList.forEach(function(project){ %>
					<tr>
						<td><a href="/project/detail/<%= project._id %>"><%= project.name %></a></td>
						<td>
							<%= project._endTime %>
						</td>
						<td width="80">
							<div class="progress-content-min">
								<div style="width: <%= project.progress %>%" class="progress-in"></div>
							</div>
						</td>
					</tr>
					<% }) %>
					</tbody>
				</table>
			</div>
		</div>

	</div>
</div>
<% include script %>
<% include footer %>