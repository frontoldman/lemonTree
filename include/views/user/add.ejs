<% include ../header %>
<div class="container-fluid dashboard-body" xmlns="http://www.w3.org/1999/html">
	<div class="row">

		<% include ../sidebar %>

		<div class="col-md-4 col-md-offset-2">

			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-sm-10">
							<h3 class="panel-title">添加用户</h3>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<form role="form" method="post" action="/user/add">
						<fieldset>
							<div class="form-group" <% if(!message){ %> style="display: none;" <% } %> >
								<div class="alert alert-danger" role="alert"><%= message %></div>
							</div>
							<div class="form-group">
								<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
							</div>
							<div class="form-group">
								<input class="form-control" placeholder="username" name="username" type="text" value="">
							</div>
							<button class="btn btn-lg btn-success btn-block">添加用户</button>
						</fieldset>
					</form>
				</div>

			</div>


		</div>

	</div>
</div>

<% include ../script %>

<% include ../footer %>