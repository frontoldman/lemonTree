<% include ../header %>
<div class="container-fluid dashboard-body">
	<div class="row">
		<% include ../sidebar %>
		<div class="col-md-10">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">修改职位</h3>
				</div>
				<div class="panel-body">
					<form role="form" method="post" action="/office/edit" class="form-horizontal">
						<input type="hidden" name="id" value="<%= office._id %>"/>
						<fieldset>
							<div class="form-group" <% if(!message){ %> style="display: none;" <% } %> >
								<div class="col-sm-5 col-sm-offset-2 alert alert-danger" role="alert"><%= message %></div>
							</div>
							<div class="form-group">
								<label for="name" class="col-sm-2 control-label">职位名称</label>
								<div class="col-sm-4">
									<input type="text" class="form-control" value="<%= office.name %>" name="name" id="name" placeholder="输入职位名称">
								</div>
							</div>
							<div class="form-group">
								<label for="level" class="col-sm-2 control-label">职位级别</label>
								<div class="col-sm-4">
									<select class="form-control" id="level" name="level">
										<% for(var i = 1;i<= 6 ;i++){ %>
										<% if(i == office.level){ %>
										<option selected value="<%= i %>"><%= i %></option>
										<% }else{%>
										<option value="<%= i %>"><%= i %></option>
										<% } %>
										<% } %>
									</select>
								</div>
							</div>
							<div class="col-md-2 col-md-offset-5">
								<button class="btn btn-lg btn-success btn-block">保存修改</button>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../script %>
<% include ../footer %>