<% include ../header %>
<div class="container-fluid dashboard-body" xmlns="http://www.w3.org/1999/html">
	<div class="row">

		<% include ../sidebar %>

		<div class="col-md-10">

			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-sm-8">
							<h3 class="panel-title"><%= project.name %>->项目详情</h3>
						</div>
						<div class="col-sm-4">
							<a href="/project/edit/<%= project._id %>"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> 编辑</a>
							<a href="/task/add/<%= project._id %>"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 添加任务</a>
							<a href="/project/members/<%= project._id %>"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> 团队成员</a>
							<a href="#" data-toggle="modal" data-target="#modifyProgress"><span class="glyphicon glyphicon-step-forward" aria-hidden="true"></span> 修改进度</a>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<table class="table project-detail">
						<tr>
							<th>项目名称:</th>
							<td><%= project.name %></td>
						</tr>
						<tr>
							<th>项目代号:</th>
							<td><%= project.code %></td>
						</tr>
						<tr>
							<th>开始时间:</th>
							<td><%= project._startTime %></td>
						</tr>
						<tr>
							<th>结束时间:</th>
							<td><%= project._endTime %></td>
						</tr>
						<tr>
							<th>状态:</th>
							<td><%= project.status %></td>
						</tr>
						<tr>
							<th>进度:</th>
							<td>
								<div class="progress-content">
									<div style="width: <%= project.progress %>%" class="progress-in"></div>
								</div>
							</td>
						</tr>
						<tr>
							<th>项目负责人:</th>
							<td><%= projectMan.username || '--' %></td>
						</tr>
						<tr>
							<th>产品负责人:</th>
							<td><%= productMan.username || '--' %></td>
						</tr>
						<tr>
							<th>测试负责人:</th>
							<td><%= testMan.username || '--' %></td>
						</tr>
						<tr>
							<th>发布负责人:</th>
							<td><%= publishMan.username || '--' %></td>
						</tr>
						<tr>
							<th>项目描述:</th>
							<td><%= project.description %></td>
						</tr>
					</table>
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">操作记录</h3>
				</div>
				<div class="panel-body">
					<% project.log.forEach(function(logItem){ %>
					<dl>
						<dt><%- logItem.title %></dt>
						<dd><pre><%= logItem.note %></pre></dd>
					</dl>
					<% }) %>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="modifyProgress" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
							aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">修改进度</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal" id="progressForm" method="post" action="/project/progress/<%= project._id %>">
					<div class="form-group">
						<label for="progress" class="col-sm-3 control-label">修改进度</label>
						<div class="col-sm-9">
							<select class="form-control" name="progress" id="progress">
								<% for(var i = 0;i<=100;i+=5){ %>
								<option value="<%= i %>"><%= i %>%</option>
								<% } %>
							</select>
						</div>
					</div>
					<div class="form-group">
						<label for="note" class="col-sm-3 control-label">添加备注</label>
						<div class="col-sm-9">
							<textarea id="note" name="note" class="form-control"></textarea>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				<button type="submit" form="progressForm" class="btn btn-primary">保存</button>
			</div>
		</div>
	</div>
</div>

<% include ../script %>
<% include ../footer %>